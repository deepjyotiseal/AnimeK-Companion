# Server API URLs
# For mobile devices, use your computer's IP address instead of localhost
# For web testing, you can use localhost
EXPO_PUBLIC_LOCAL_API_URL=http://10.0.2.2:3000

# IMPORTANT: This URL is required for production and when local server is not available
# Do not remove this line - the app will check this URL if local server is unreachable
EXPO_PUBLIC_REMOTE_API_URL=your_remote_api_url_here

# Firebase Configuration
# These values are REQUIRED to configure Firebase
# The app will not initialize properly if these values are missing
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id_here